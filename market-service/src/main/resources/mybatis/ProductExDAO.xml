<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.thinkjoy.gk.dao.IProductExDAO">

    <sql id="Base_Column_List">
        id,
        status,
        createDate,
        lastModDate,
        code,
        name,
        type,
        unit,
        marketPrice,
        price,
        icon,
        action,
        intro,
        validValue
    </sql>

    <select id="findPage" resultType="Product">
        SELECT <include refid="Base_Column_List" /> from shishuo_product
        <where>
            1=1
            <if test="type!=null">
                AND type = #{type}
            </if>
            <if test="code!=null">
                AND code = #{code}
            </if>
        </where>
        <if test="startSize != null  and endSize != null  ">
            limit #{startSize},#{endSize}
        </if>
    </select>

</mapper>

